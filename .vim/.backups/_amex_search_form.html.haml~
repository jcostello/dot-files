.form.clearfix#search_form
  = form_for search, url: "#{path}#search_form", html: { method: :get } do |f|
    .search
      = select :search, :name_contains, restaurant_names || [], {include_blank: "Nombre del Restaurant"}, class: "chzn-select search-box", multiple: false
      %button.search-button Buscar

  .filters
    %span Flitrar por
    = form_for search, url: "#{path}#search_form", html: { method: :get } do |f|
      = select :search, :cuisines_id_eq, cuisines || [], { include_blank: "Cocina" }, { class: "cocina search-filter", target: "cuisines_id_eq" }
    = form_for search, url: "#{path}#search_form", html: { method: :get } do |f|
      = select :search, :zone_id_eq, zones || [], { include_blank: "Barrio" }, { class: "cocina search-filter", target: "zone_id_eq" }
